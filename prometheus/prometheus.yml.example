global:
  scrape_interval: 5s   # 默认抓取间隔

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'hyperf'
    static_configs:
      - targets: ['localhost:9501']

  - job_name: "php_activity"
    scrape_interval: 5s  # 针对此job单独设置5秒间隔
    metrics_path: "/metrics"
    file_sd_configs:
      - files:
        - "./php_activity_targets.json"